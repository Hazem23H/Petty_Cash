<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="petty_cash_requests_tree" model="ir.ui.view">
        <field name="name">petty.cash.requests.tree</field>
        <field name="model">petty.cash.requests</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_name"/>
                <field name="request_date"/>
                <field name="request_amount"/>
            </tree>
        </field>
    </record>

    <record id="petty_cash_requests_form" model="ir.ui.view">
        <field name="name">petty.cash.requests.form</field>
        <field name="model">petty.cash.requests</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,dep_approval,acc_approval,hq_approval,approved,released,cancelled"/>

                    <!-- Submit: only visible in draft, only for petty cash users -->
                    <button name="action_submit" type="object" string="Submit"
                            invisible="state != 'draft'"
                            groups="petty_cash.group_petty_cash_user"/>

                    <!-- Dept approve: only visible when state == 'submitted' and only for dept approvers -->
                    <button name="action_dep_approve" type="object" string="Dept Approve"
                            invisible="state != 'dep_approval'"
                            groups="petty_cash.group_dep_approver"/>

                    <!-- Accountant approve -->
                    <button name="action_acc_approve" type="object" string="Accountant Approve"
                            invisible="state != 'acc_approval'"
                            groups="petty_cash.group_acc_approver"/>

                    <!-- HQ approve -->
                    <button name="action_hq_approve" type="object" string="HQ Approve"
                            invisible="state != 'hq_approval'"
                            groups="petty_cash.group_hq_approver"/>

                    <!-- Release (manager) -->
                    <button name="action_release" type="object" string="Release"
                            invisible="state != 'approved'"
                            groups="petty_cash.group_petty_cash_manager"/>

                    <!-- Cancel: visible to user & manager unless already released/cancelled -->
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state in ['released','cancelled']"
                            groups="petty_cash.group_petty_cash_user,petty_cash.group_petty_cash_manager"/>
                </header>


                <sheet>
                    <group>
                        <group>
                            <field name="employee_name"/>
                            <field name="request_date"/>
                            <field name="request_amount"/>
                            <field name="project_id"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="cash_in_hand"/>
                            <field name="petty_cash_limit"/>
                            <field name="remining_petty_cash_balance"/>
                        </group>
                    </group>


                </sheet>

            </form>
        </field>
    </record>

    <record id="action_requests_tree" model="ir.actions.act_window">
        <field name="name">requests tree</field>
        <field name="res_model">petty.cash.requests</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                open requests list
            </p>
        </field>
    </record>
</odoo>